# Polly Connect Server Configuration
# Copy this to .env and edit values

# Server
POLLY_HOST=0.0.0.0
POLLY_PORT=8000
POLLY_DEBUG=true

# Database
POLLY_DB_PATH=polly.db

# Whisper model (tiny, base, small, medium, large)
POLLY_WHISPER_MODEL=base

# Audio settings
POLLY_SILENCE_THRESHOLD=0.01
POLLY_SILENCE_DURATION=1.0

# TTS engine (pyttsx3, espeak, gtts)
POLLY_TTS_ENGINE=pyttsx3
POLLY_TTS_VOICE=
POLLY_TTS_RATE=150
