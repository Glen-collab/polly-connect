# ESPHome Secrets Configuration
# Copy this file to secrets.yaml and fill in your values
# secrets.yaml is gitignored and will not be committed

# WiFi Credentials
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# ESPHome API Encryption Key
# Generate with: openssl rand -base64 32
api_encryption_key: "REPLACE_WITH_GENERATED_KEY"

# OTA Password
ota_password: "polly-ota-password"

# Polly Server Configuration (optional - for custom WebSocket mode)
polly_server_host: "192.168.1.100"
polly_server_port: "8000"
polly_server_uri: "ws://192.168.1.100:8000/api/audio/stream"
